{
  "name": "iota-wallet",
  "version": "0.0.1-test",
  "description": "Node.js binding to the wallet library",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/iotaledger/wallet.rs"
  },
  "author": "Lucas Nogueira <lucas.nogueira@iota.org>",
  "license": "MIT",
  "dependencies": {
    "neon-cli": "^0.4.0",
    "prebuild-install": "^5.3.3"
  },
  "scripts": {
    "install": "prebuild-install --tag-prefix nodejs-binding-v || yarn rebuild",
    "build:neon": "neon build --release && mv native/index.node build/Release",
    "rebuild": "prebuild --prepack 'yarn build:neon' --strip",
    "prebuild:node": "prebuild -t 10.0.0 -t 11.0.0 -t 12.0.0 -t 13.0.0 -t 14.0.0 -t 15.0.0 --prepack 'yarn build:neon' --strip",
    "prebuild:electron": "prebuild -t 4.2.3 -t 6.1.5 -t 8.2.1 -r electron --prepack 'yarn build:neon' --strip"
  },
  "devDependencies": {
    "prebuild": "^10.0.1"
  }
}
